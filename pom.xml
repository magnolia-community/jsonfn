  <name>Json Templating Functions Magnolia Module</name>

  <properties>
    <magnoliaVersion>5.4.6</magnoliaVersion>
    <javaVersion>1.8</javaVersion>
    <cloverCoverageThreshold>75</cloverCoverageThreshold>
    <magnoliaLicenseStyle>dual</magnoliaLicenseStyle>
  </properties>

  <scm>
    <connection>scm:git:https://git.magnolia-cms.com/scm/forge/magnolia-jsonfn.git</connection>
